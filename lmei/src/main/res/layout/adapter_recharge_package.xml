<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rechangemoneyimg" />

        <TextView
            android:id="@+id/rechargeamoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/chatname"
            android:textColor="@color/black"
            android:textSize="@dimen/textdx_16" />

        <TextView
            android:id="@+id/rechargeamoneys"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/chatname"
            android:textColor="@color/rechange"
            android:textSize="@dimen/textdx_16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rechargetcx"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="3dip"
            android:id="@+id/rechargetxzlin"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="3dip" >

            <TextView
                android:id="@+id/rechargeamoneyreal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/wallet4"
                android:textColor="@color/white"
                android:textSize="@dimen/textdx_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>