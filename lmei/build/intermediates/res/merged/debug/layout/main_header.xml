<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linheader"
    android:layout_width="match_parent"
    android:layout_height="50dip"
    android:background="@drawable/theme"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linheadercon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

   
        <RelativeLayout
            android:id="@+id/headertheme"
            android:layout_width="fill_parent"
            android:layout_height="50dip" >

            <RelativeLayout
                android:id="@+id/headerthemeleft"
                android:layout_width="30dip"
                android:visibility="gone"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dip"
                    android:background="@null" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/headerleft"
                android:layout_width="80dip"
                android:layout_height="30dip"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:visibility="gone"
                android:layout_toRightOf="@+id/headerthemeleft"
                android:gravity="center|left"
                android:orientation="horizontal" >

                  <TextView
                    android:id="@+id/tv_titile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="@null"
                    android:textColor="#ffffffff"
                    android:textSize="@dimen/textdx_16" />

                <ImageView
                    android:id="@+id/cityts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:background="@null" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/headconlin"
                android:layout_width="180dip"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/headconrel"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/headercontent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/app_name"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="#ffffffff"
                        android:textSize="@dimen/textdx_22" />

                    <View
                        android:id="@+id/headercontentv"
                        style="@style/headcontentlin"
                        android:layout_width="wrap_content"
                        android:layout_height="2dip"
                        android:layout_alignLeft="@+id/headercontent"                        
                        android:layout_marginTop="3dip"
                        android:layout_below="@+id/headercontent"
                        android:layout_alignRight="@+id/headercontent"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/headconrel1"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/headercontent1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/app_name"
                        android:textColor="#ffffffff"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textSize="@dimen/textdx_18" />

                    <View
                        android:id="@+id/headercontentv1"
                        style="@style/headcontentlin"
                        android:layout_width="wrap_content"
                        android:layout_height="2dip"
                        android:layout_alignLeft="@+id/headercontent1"
                         android:layout_marginTop="3dip"
                        android:layout_below="@+id/headercontent1"
                        android:layout_alignRight="@+id/headercontent1"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/headerright"
                android:layout_width="100dip"
                android:layout_height="30dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:gravity="center|right"
                android:visibility="gone"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"                   
                    android:id="@+id/typelog"                   
                    android:background="@null" />
                <TextView
                        android:id="@+id/headconfrim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"  
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:ellipsize="end"
                        android:visibility="gone"
                        android:singleLine="true"
                        android:textSize="@dimen/textdx_16" />                
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>