<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vidmt.lmei.activity.HotChatActivity" >

    <include layout="@layout/activity_error" />

    <include layout="@layout/activity_brokennetwork" />

    <com.vidmt.lmei.widget.PullToRefreshView
        android:id="@+id/pull_hot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <GridView
            android:id="@+id/hot_grid"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/chat"
            android:horizontalSpacing="5dip"
            android:numColumns="2"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:scrollbars="none"
            android:verticalSpacing="5dip" />
    </com.vidmt.lmei.widget.PullToRefreshView>

</LinearLayout>