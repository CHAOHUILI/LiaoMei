<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    android:orientation="vertical"
    tools:context="com.vidmt.lmei.activity.AddzfbActivity" >

    <include layout="@layout/main_header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/addzfb1"
            android:textSize="@dimen/textdx_16" 
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/name"
            android:layout_marginLeft="15dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:hint="@string/addzfb4"
            android:textColor="@color/black"
            android:textSize="@dimen/textdx_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/addzfb2"
            android:textSize="@dimen/textdx_16"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/zh"
            android:layout_marginLeft="15dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:hint="@string/addzfb5"
            android:textCursorDrawable="@null"
            android:background="@null"
            android:textSize="@dimen/textdx_16"
            android:textColor="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/addzfb"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/loginbg"
        android:gravity="center"
        android:text="@string/addzfb3"
        android:textColor="@color/white"
        android:textSize="@dimen/textdx_18"
        android:textStyle="bold" />

</LinearLayout>