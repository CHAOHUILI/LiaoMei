<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f8f8"
    tools:context="com.vidmt.lmei.activity.RegisterImproveActivity" >

    <include layout="@layout/main_header" />
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
         >


      <com.vidmt.lmei.widget.CircleImageView
            android:id="@+id/img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/regphoto" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img"
            android:layout_alignRight="@+id/img"
            android:src="@drawable/regphotocamera" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/username"
            android:textColor="@color/gray"
            android:textSize="@dimen/textdx_16" />

        <EditText
            android:id="@+id/usernames"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/usernamets"
            android:maxLength="7"
            android:textColor="@color/black"
            android:singleLine="true"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/textdx_16" >
        </EditText>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/birthdaylin"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/birthday"
            android:textColor="@color/gray"
            android:textSize="@dimen/textdx_16" />

        <TextView
            android:id="@+id/birthday"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/birthdayts"
            android:textColor="@color/black"
            android:textSize="@dimen/textdx_16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/usersexlin"
        android:padding="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/usersex"
            android:textColor="@color/gray"
            android:textSize="@dimen/textdx_16" />
        
        <TextView
            android:id="@+id/usersex"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/usersexts"
            android:textColor="@color/black"
            android:textSize="@dimen/textdx_16" />
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            
            android:gravity="center_vertical"
            android:text="@string/usersexmr"
            android:textColor="#666666"
            android:textSize="@dimen/textdx_10" />
      
    </LinearLayout>

  
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="@color/gray_line" />
    
      <LinearLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" />
</LinearLayout>
