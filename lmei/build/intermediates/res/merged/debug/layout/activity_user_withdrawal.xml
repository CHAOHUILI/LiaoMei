<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/graywhite"
    tools:context="com.vidmt.lmei.activity.UserWithdrawalActivity" >

    <include layout="@layout/main_header" />
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dip"
        android:background="@color/white"
        android:padding="10dp">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/textdx_16"
            android:gravity="center_vertical"
             android:textColor="@color/black"
            android:text="@string/withdrawal4"
            />
        <TextView 
            android:id="@+id/txzj"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="@dimen/textdx_16"
            android:gravity="center_vertical"
            android:text="ï¿¥"/>
          <EditText 
            android:layout_marginLeft="3dip"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:id="@+id/withdrawalmoney"
            android:layout_height="match_parent"
            android:background="@null"
            android:textCursorDrawable="@null"
            android:textColor="@color/black"
            android:textSize="@dimen/textdx_16" 
            android:hint="@string/withdrawal3"
            />
    </LinearLayout>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/gray"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="@dimen/textdx_14"
        android:text="@string/withdrawal2"/>
    <TextView
        android:id="@+id/withdrawalnex"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="30dip"
        android:background="@drawable/loginbg"
        android:gravity="center"
        android:text="@string/withdrawal1"
        android:textColor="@color/white"
        android:textSize="@dimen/textdx_18"
        android:textStyle="bold" />

</LinearLayout>
